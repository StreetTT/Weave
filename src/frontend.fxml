<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import com.jfoenix.controls.*?>

<?import javafx.geometry.Insets?>
<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="FrontendController">
    <children>
        <VBox spacing="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Create new project" />
                                <MenuItem mnemonicParsing="false" text="Add new python process" onAction="#handleAddProcessRow"/>
                                <MenuItem mnemonicParsing="false" onAction="#saveProject" text="Save project" />
                                <MenuItem mnemonicParsing="false" onAction="#saveProjectAs" text="Save project as" />
                                <MenuItem mnemonicParsing="false" onAction="#openProject" text="Open project" />
                                <Menu fx:id="fileMenu" mnemonicParsing="false" text="Recent projects">
                                    <items>
                                    </items>
                                </Menu>
                                <MenuItem mnemonicParsing="false" text="Export current project" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem mnemonicParsing="false" text="Find python file" />
                                <MenuItem mnemonicParsing="false" text="Copy python file" />
                                <MenuItem mnemonicParsing="false" text="Paste python file" />
                                <MenuItem mnemonicParsing="false" text="Select all files" />
                                <MenuItem mnemonicParsing="false" text="Move selected file to" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Run">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#runProcesses" text="Run all" />
                                <MenuItem mnemonicParsing="false" onAction="#runSelectedProcesses" text="Run Selected" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>

                <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #f0f0f0;">
                    <padding>
                        <Insets top="4.0" right="10.0" bottom="4.0" left="10.0" />
                    </padding>
                    <children>
                        <VBox alignment="CENTER" spacing="2.0">
                            <padding>
                                <Insets top="20.0" />
                            </padding>
                            <children>
                                <JFXCheckBox fx:id="selectAllCheckBox" text="" />
                                <Label text="Select All" style="-fx-font-size: 13px;"/>
                            </children>
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </VBox>

                        <JFXButton fx:id="addProcessButton" onAction="#handleAddProcessRow" buttonType="RAISED" contentDisplay="LEFT" prefHeight="40.0" prefWidth="60.0" style="-fx-background-color: #64b5f6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 4 8 4 8; -fx-font-size: 13px;">
                            <graphic>
                                <Text text="+" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-fill: white;"/>
                            </graphic>
                            <HBox.margin>
                                <Insets left="30.0" /> </HBox.margin>
                        </JFXButton>

                        <Region HBox.hgrow="ALWAYS" />

                        <JFXButton fx:id="runAllTopButton" onAction="#runSelectedProcesses"  buttonType="RAISED" contentDisplay="TOP" prefHeight="40.0" prefWidth="60.0" style="-fx-background-color: #81c784; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 4 8 4 8; -fx-font-size: 13px;">
                            <graphic>
                                <Text text="â–¶" style="-fx-font-size: 13px; -fx-fill: white;"/>
                            </graphic>

                            <HBox.margin>
                                <Insets right ="15.0"/>
                            </HBox.margin>

                        </JFXButton>
                    </children>
                </HBox>


                <ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" VBox.vgrow="ALWAYS">
                    <content>
                        <AnchorPane>
                            <children>
                                <VBox fx:id="processContainer" spacing="10.0" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                    <padding>
                                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                </VBox>
                                <Pane fx:id="columnOverlayPane" mouseTransparent="true" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" />
                            </children>
                        </AnchorPane>
                    </content>
                </ScrollPane>

                <StackPane styleClass="output-container" VBox.vgrow="NEVER" minHeight="219.0" prefHeight="219.0" maxHeight="219.0">
                    <VBox.margin>
                    <Insets top="5.0" />
                    </VBox.margin>
                    <padding>
                        <Insets top="10.0" right="10.0" bottom="10.0" left="10.0" />
                    </padding>
                    <children>
                        <TextArea fx:id="outputTextArea" editable="false" wrapText="true" styleClass="output-terminal">
                            <font>
                                <Font name="Consolas" size="13.0" />
                            </font>
                            >Output will appear here...
                        </TextArea>
                    </children>
                </StackPane>

            </children>
        </VBox>
    </children>
</AnchorPane>
